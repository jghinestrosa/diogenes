{
  "name": "diogenes",
  "version": "0.1.0",
  "description": "An adventure game engine written in JavaScript",
  "main": "build-node/diogenes.js",
  "scripts": {
    "browserify": "browserify src/diogenes.js --standalone diogenes -o build/diogenes.js -t [ babelify --presets [es2015] ]",
    "uglify": "uglifyjs -mc < build/diogenes.js > build/diogenes.min.js",
    "clean": "rimraf build && mkdirp build",
    "build": "npm run clean && npm run browserify && npm run uglify",
    "build:debug": "npm run clean && npm run build && npm run browserify",
    "jshint": "jshint src",
    "prepublish": "npm run build",
    "watch": "watch 'npm run build:debug' src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jghinestrosa/diogenes.git"
  },
  "keywords": [
    "diogenes",
    "adventure",
    "game",
    "engine"
  ],
  "author": "Jorge Garc√≠a Hinestrosa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jghinestrosa/diogenes/issues"
  },
  "homepage": "https://github.com/jghinestrosa/diogenes#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "jshint": "^2.9.4",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.1",
    "tape": "^4.6.3",
    "uglify-js": "^2.8.13",
    "watch": "^1.0.2"
  }
}
